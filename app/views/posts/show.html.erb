<%= turbo_frame_tag :post_details do %>
  <div class="flex"><span class="font-bold">Title: </span><span> <%= @post.title %></span></div>
  <div class="flex"><span class="font-bold">Comment: </span><span> <%= @post.content %></span></div>
  <%= turbo_stream.replace(dom_id(@post, "id"), partial: "posts/post", locals:{ post: @post }) %>
<% end %>