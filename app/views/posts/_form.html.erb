<%= turbo_frame_tag dom_id(post) do %>
  <div class="grid grid-cols-2" data-controller="post">
    <%= form_with model: post, url: post.persisted? ? post_path(post) : posts_path, data: { action: "submit->post#create" }, local: false do |f| %>
      <div class="mb-4">
        <%= f.label :title, class: "block text-gray-700 font-bold" %>
        <%= f.text_field :title, data: { post_target: "title" }, class: "w-full px-4 py-2 border rounded-md" %>
        <span class="text-red-500 hidden" data-post-target="titleError">This field is required</span>
      </div>

      <div class="mb-4">
        <%= f.label :content, class: "block text-gray-700 font-bold" %>
        <%= f.text_area :content, data: { post_target: "content" }, class: "w-full px-4 py-2 border rounded-md" %>
        <span class="text-red-500 hidden" data-post-target="contentError">This field is required</span>
      </div>

      <div class="flex space-x-2">
        <%= f.submit "Save", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
        <%= link_to "Cancel", post, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition" %>
      </div>
    <% end %>
  </div>
<% end %>
